 + item.quantity * item.price, 0);\n    });\n    const __returned__ = {\n      route,\n      businessName,\n      cart,\n      selectedAddress,\n      deliveryAddresses,\n      showAddresses,\n      fetchDeliveryAddresses,\n      selectAddress,\n      foodItems,\n      totalAmount,\n      ref,\n      computed,\n      onMounted,\n      get useRoute() {\n        return useRoute;\n      },\n      get axios() {\n        return axios;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","computed","onMounted","useRoute","axios","route","businessName","params","cart","selectedAddress","deliveryAddresses","showAddresses","query","value","JSON","parse","console","log","error","fetchDeliveryAddresses","userId","localStorage","getItem","response","get","data","selectAddress","address","foodItems","Object","keys","map","key","title","price","description","quantity","photo","totalAmount","values","reduce","sum","item"],"sources":["C:/Users/asus/Desktop/vue_elm/vue_elm/src/components/OrderComponent.vue"],"sourcesContent":["<template>\r\n  <div class=\"wrapper\">\r\n    <header class=\"header\">\r\n      <div class=\"title\">\r\n        <div class=\"p1\">\r\n          <span class=\"iconfont icon-back\" style=\"font-size: 8vw\" @click=\"goBack\"></span>\r\n        </div>\r\n        <div class=\"p2\">\r\n          <p>确认订单</p>\r\n        </div>\r\n      </div>\r\n      <div class=\"banner\">\r\n        <span class=\"iconfont icon-guangbogonggao\" style=\"padding-left: 2vw\"></span>\r\n        <p style=\"padding-left: 2vw\">温馨提示： 请适量点餐,避免浪费</p>\r\n      </div>\r\n      <div class=\"location\">\r\n        <div class=\"location-text\">\r\n          <p>地址: {{ selectedAddress }}</p>\r\n          <img :src=\"require('@/assets/img/orders/img.png')\"\r\n               height=\"23\"\r\n               width=\"17\" alt=\"描述\"\r\n               @click=\"fetchDeliveryAddresses \" />\r\n        </div>\r\n        <!-- 显示地址列表 -->\r\n        <div v-if=\"showAddresses\" class=\"address-list\">\r\n          <div\r\n              v-for=\"address in deliveryAddresses\"\r\n              :key=\"address.daId\"\r\n              class=\"address-item\"\r\n              @click=\"selectAddress(address)\"\r\n          >\r\n            {{  address.address }}\r\n          </div>\r\n        </div>\r\n        <div class=\"location-speed\">\r\n          <p>立即送出</p>\r\n          <div class=\"location-speed-to\">\r\n            <p>预计13:40送达</p>\r\n            <img :src=\"require('@/assets/img/orders/img.png')\" height=\"23\" width=\"17\" />\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </header>\r\n    <main class=\"body\">\r\n      <div class=\"body-title\">\r\n        <div class=\"title1\">\r\n          <p>{{ businessName }}</p>\r\n\r\n        </div>\r\n        <div class=\"title2\">\r\n          <p>蜂鸟准时达</p>\r\n        </div>\r\n      </div>\r\n      <div class=\"body-text\">\r\n        <div v-for=\"item in foodItems\" :key=\"item.title\" class=\"food\">\r\n          <div class=\"food-left\">\r\n            <img :src=\"item.photo\" alt=\"商品图片\" />\r\n          </div>\r\n          <div class=\"food-right\">\r\n            <div class=\"food-right-title\">\r\n              <div class=\"title1\">\r\n                <p>{{ item.title }}</p>\r\n              </div>\r\n              <div class=\"price\">\r\n                <p>&#165;{{ item.price }}</p>\r\n              </div>\r\n            </div>\r\n            <div class=\"name\">\r\n              <p>{{ item.description }}</p>\r\n            </div>\r\n            <div class=\"number\">\r\n              <p>x {{ item.quantity }}</p>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 其他费用和总计 -->\r\n      </div>\r\n    </main>\r\n    <footer class=\"footer\">\r\n      <div class=\"foot-left\">\r\n        <div class=\"sum-price\">\r\n          <p1